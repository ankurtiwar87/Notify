            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/card_about"
                android:background="@drawable/profilebg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textSize="27dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Know more about your App"
                    android:layout_marginLeft="15dp"
                    android:textSize="14dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/profilebg"
                android:orientation="vertical"
                android:id="@+id/card_policy">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Privacy Policy"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:text="Check out the details here"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/profilebg"
                android:orientation="vertical"
                android:id="@+id/card_rate">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rate Us"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:text="Rate this app on play store"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/profilebg"
                android:orientation="vertical"
                android:id="@+id/card_share">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Share"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:text="Share this app with others"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/profilebg"
                android:orientation="vertical"
                android:id="@+id/feedback">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="FeedBack"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:layout_marginLeft="15dp"
                    android:text="Share feedback so that we can improve"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#FAABAB"
                android:background="@drawable/profilebg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Logout"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="27dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Log out of your account"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textSize="14dp"/>

            </LinearLayout>

        </LinearLayout>

